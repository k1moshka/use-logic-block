{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-await-in-loop": "error",
        "curly": "error",
        "eqeqeq": "error",
        "default-case": "error",
        "no-nested-ternary": "error",
        "no-unneeded-ternary": "warn",
        "operator-linebreak": ["error", "before"],
        "indent": ["error", 2, { "SwitchCase": 1 }]
    }
}
